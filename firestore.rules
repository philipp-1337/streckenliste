rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own user profile
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
    }

    // Entries are stored per tenant (jagdbezirk)
    match /jagdbezirke/{jagdbezirkId}/eintraege/{eintragId} {
      // User must be authenticated
      allow read, write: if request.auth != null &&
                          // User must belong to the jagdbezirk
                          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.jagdbezirkId == jagdbezirkId;
    }
  }
}